{
    "entities": {
        "user": {
            "title": "User",
            "description": "A user of the application.",
            "type": "object",
            "properties": {
                "uid": {
                    "type": "string",
                    "description": "The user's unique ID."
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address."
                },
                "displayName": {
                    "type": "string",
                    "description": "The user's display name."
                },
                "photoURL": {
                    "type": "string",
                    "format": "uri",
                    "description": "The URL of the user's profile picture."
                },
                "role": {
                    "type": "string",
                    "description": "The role of the user.",
                    "enum": [
                        "doctor",
                        "patient"
                    ]
                },
                "familyId": {
                    "type": "string",
                    "description": "The ID of the family this user belongs to."
                }
            },
            "required": ["uid", "email", "role"]
        },
        "family": {
            "title": "Family",
            "description": "A group of linked user accounts.",
            "type": "object",
            "properties": {
                "id": {
                    "type": "string",
                    "description": "The unique ID for the family."
                },
                "name": {
                    "type": "string",
                    "description": "The name of the family (e.g., 'The Sharma Family')."
                },
                "memberIds": {
                    "type": "array",
                    "items": {
                        "type": "string"
                    },
                    "description": "A list of user UIDs belonging to this family."
                }
            },
            "required": ["id", "name"]
        }
    },
    "auth": {
        "providers": ["google.com"]
    },
    "firestore": {
        "/users/{userId}": {
            "schema": {
                "$ref": "#/entities/user"
            },
            "description": "Stores user profile information."
        },
        "/families/{familyId}": {
            "schema": {
                "$ref": "#/entities/family"
            },
            "description": "Stores information about a family unit."
        }
    }
}
